schema {
    query: Query
    mutation: Mutation
}

type Query {
   getEmployees: [Employee]
   getEmployee(id: Int): Employee
   getCar(id: Int): Car
   getCars: [Car]
}

type Employee {
   id: Int!
   firstName: String!
   lastName: String!
   email: String!
   mobile: String!
   contractType: ContractType!
   carLicencePlate: String
   car: Car
}

enum ContractType {
    PERMANENT
    FIXED_TERM
}

type Car {
   id: Int!
   make: String!
   model: String!
   color: String
   bodyType: String
   licensePlate: String!
}

type Mutation {
   addEmployee(firstName: String!,
                    lastName: String!,
                    email: String!,
                    mobile: String!,
                    carLicensePlate: String,
                     contractType: ContractType!): Employee
}

